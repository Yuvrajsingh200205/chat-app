<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
    <link rel="stylesheet" href="/styles/signupStyles.css">
</head>
<body>
    <div class="signup-container">  
        <h2>Sign Up</h2>

        <!-- Display error message if any -->
        <% if (typeof errorMessage !== 'undefined') { %>
            <div class="error-message">
                <p><%= errorMessage %></p>
            </div>
        <% } %>

        <form id="signupform" action="/signup" method="post">
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" id="fullName" name="fullName" value="<%= fullName ? fullName : '' %>" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= email ? email : '' %>" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>
            <div class="form-group">
                <button type="submit">Sign Up</button>
            </div>
        </form>

        <p class="login-option">Already have an account? <a href="/login" class="login-link">Login</a></p>
    </div>

    <div id="successPopup" class="popup">
        <div class="popup-content">
            <span class="close">&times;</span>
            <p>Sign Up Successful!</p>
        </div>
    </div>
    
    <script src="/scripts/signupScripts.js"></script>
</body>
</html>
